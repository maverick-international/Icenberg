{
    "name": "mvrk/icenberg",
    "type": "library",
    "description": "Library to abstract away Advanced Custom Fields flexible content markup",
    "license": "MIT",
    "keywords": [
        "acf",
        "advanced custom fields",
        "wordpress",
        "flexible content"
    ],
    "authors": [
        {
            "name": "Daniel Devine",
            "email": "dan.devine@maverick-intl.com"
        },
        {
            "name": "Cathal Toomey",
            "email": "cathal.toomey@maverick-intl.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "symfony/yaml": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "MVRK\\Icenberg\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MVRK\\Tests\\": "tests/",
            "MVRK\\Icenberg\\Fields\\": "tests/Fixtures/Fields/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "symfony/var-dumper": "^5.1",
        "pestphp/pest": "^3.7",
        "brain/monkey": "^2.6",
        "phpunit/php-code-coverage": "^11.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}